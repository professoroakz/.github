{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "schedule": [
    "before 6am on Monday"
  ],
  "labels": ["dependencies"],
  "assignees": ["@professoroakz"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
