# Extended Environment Variables for professoroakz/.github repository

# Repository configuration
REPO_NAME=professoroakz/.github
REPO_DESCRIPTION="GitHub configuration repository containing profile settings, workflows, and project configurations"
REPO_URL=https://github.com/professoroakz/.github

# Git configuration
GIT_USER_NAME="Your Name"
GIT_USER_EMAIL="your.email@example.com"
GIT_BRANCH=main
GIT_DEFAULT_REMOTE=origin

# Package configuration
PACKAGE_VERSION=1.3.37
PACKAGE_NAME=@professoroakz/github
NPM_REGISTRY=https://registry.npmjs.org
NPM_TOKEN=your_npm_token_here
NPM_SCOPE=@professoroakz

# Docker configuration
DOCKER_REGISTRY=ghcr.io
DOCKER_IMAGE_NAME=professoroakz/github-config
DOCKER_TAG=latest
DOCKER_BUILDKIT=1

# Python configuration
PYTHON_VERSION=3.9
PYPI_TOKEN=your_pypi_token_here

# Backup configuration
BACKUP_DIR=backups
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=gzip

# Sync configuration
AUTO_SYNC_ENABLED=false
SYNC_INTERVAL=daily

# Publishing
PUBLISH_TO_NPM=true
PUBLISH_TO_DOCKER=true
PUBLISH_TO_PYPI=false
PUBLISH_PROVENANCE=true

# GitHub Actions
GITHUB_TOKEN=your_github_token_here

# Development
DEBUG=false
LOG_LEVEL=info
NODE_ENV=production
